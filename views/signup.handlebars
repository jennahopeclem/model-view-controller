<div id='sign-up-container' class="page-content">
  <h2>Sign-Up</h2>
  <form class='signup-form'>
    <div class='row'>
      <div class='input-field col s12'>
        <input id='name-signup' type='text' class='validate' required />
        <label for='name'>Full Name</label>
      </div>
    </div>
    <div class='row'>
      <div class='input-field col s12'>
        <input id='email-signup' type='email' class='validate' required />
        <label for='email'>Email</label>
      </div>
    </div>
    <div class='row'>
      <div class='input-field col s12'>
        <input id='password-signup' type='password' class='validate' required />
        <label for='password'>Password</label>
      </div>
    </div>
    <button class='btn signupbtn black' type='submit'>Sign Up</button>
  </form>
</div>

<script src='/js/signup.js'></script>
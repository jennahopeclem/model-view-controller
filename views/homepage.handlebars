<div class="page-content">
{{#if logged_in}}
  <div class='card'>
    <h3>Add New Blog Post:</h3>
    <a
      href='/blog'
      class='btn-floating btn-large waves-effect waves-light btnColor'
    >
      <i class='material-icons'>+</i></a>
  </div>
{{/if}}
<div>
  <h4>Leave a blog post!</h4>
  {{#each blogs as |blog|}}
    {{> blogpost-details blog}}
  {{/each}}
</div>
</div>
<script src = "/js/deleteBlog.js"></script>
<script src = "/js/createComment.js"></script>
<script src= "/js/deleteComment.js"></script>